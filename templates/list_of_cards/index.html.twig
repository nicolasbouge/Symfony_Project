{% extends 'base.html.twig' %}

{% block title %}Liste des Cartes Yu-Gi-Oh!{% endblock %}

{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('css/cartes.css') }}">
{% endblock %}

{% block body %}
    <a href="{{path('app_home')}}">Retourner Ã  l'acceuil</a>
    <h1>Liste des Cartes Yu-Gi-Oh!</h1>

    <ul>
        {% for card in pagination %}
            <li>
                <div>
                    {{ card['name'] }} - {{ card['type'] }}
                </div>
                <div class="description">
                    {{ card['desc'] }}
                </div>
                <img class="card-image" src="{{ card['card_images'][0]['image_url'] }}" alt="{{ card['name'] }}" width="300">
            </li>
        {% endfor %}
    </ul>
    {{ knp_pagination_render(pagination) }}
</div>
{% endblock %}
